<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- default -->
    <item android:state_pressed="false" android:state_focused="false">
        <shape >
            <solid
                android:color="#77111111" />
            <stroke
                android:width="1dp"
                android:color="#444444" />
            <corners
                android:bottomLeftRadius="256dip"
                android:topRightRadius="256dip"
                android:topLeftRadius="256dip"
                android:bottomRightRadius="256dip"/>
        </shape>
    </item>
   
    <!-- button focused -->
    <item android:state_pressed="false" android:state_focused="true">
        <shape >
            <solid
                android:color="#77111111" />
            <stroke
                android:width="1dp"
                android:color="#444444" />
            <corners
                android:bottomLeftRadius="256dip"
                android:topRightRadius="256dip"
                android:topLeftRadius="256dip"
                android:bottomRightRadius="256dip"/>
        </shape>
    </item>
   
   <!-- button pressed -->
    <item android:state_pressed="true" android:state_focused="false">
        <shape >
            <solid
                android:color="#77666666" />
            <stroke
                android:width="1dp"
                android:color="#444444" />
            <corners
                android:bottomLeftRadius="256dip"
                android:topRightRadius="256dip"
                android:topLeftRadius="256dip"
                android:bottomRightRadius="256dip"/>
        </shape>
    </item>
</selector>
