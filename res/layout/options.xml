<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
        
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    tools:context=".MainActivity" >
	
   	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/grey"
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
	        android:orientation="vertical" >
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:background="@color/blue_dark"
	        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/ProfileNickname"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	           	android:paddingBottom="@dimen/activity_vertical_margin"
			    android:paddingLeft="@dimen/activity_horizontal_margin"
			    android:paddingRight="@dimen/activity_horizontal_margin"
			    android:paddingTop="@dimen/activity_vertical_margin"
	            android:text="OPTIONS"
	            android:textSize="20pt"
	            android:gravity="center"
	            android:textColor="@color/white"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    </LinearLayout>
	    
       <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Graphic Window:"
        android:textSize="18pt"
        android:textColor="@color/white"
       	android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceLarge" />
	    
       
       	    <RadioGroup
	            android:id="@+id/radioGroup1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >

	        <RadioButton
	            android:id="@+id/MonthOption"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button_customize3"
	            android:text="One Month"
		        android:padding="5pt"
 				android:textColor="@color/white"
 				android:textSize="15pt" />

	        <RadioButton
	            android:id="@+id/YearOption"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="One Year"
	            android:background="@drawable/button_customize3"
		        android:padding="5pt"
 				android:textColor="@color/white"
 				android:textSize="15pt" />
	        <RadioButton
	            android:id="@+id/OtherOption"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="Other"
	            android:background="@drawable/button_customize3"
		        android:padding="5pt"
 				android:textColor="@color/white"
 				android:textSize="15pt" />
	    </RadioGroup>

       	    <TextView
        android:id="@+id/BeginDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:text="Beginning Date"
        android:textSize="14pt"
        android:textColor="@color/white"
       	android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceLarge" />
       	    
       	    <DatePicker
       	        android:id="@+id/datePicker1"
       	        android:layout_marginTop="10pt"
       	        android:textColor="@color/white"
       	        android:background="@drawable/button_customize6"
       	        android:layout_width="wrap_content"
       	        android:layout_height="wrap_content" />
       	    
       	           	    <TextView
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:text="End Date"
        android:textSize="14pt"
        android:textColor="@color/white"
       	android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceLarge" />
       	    
       	    <DatePicker
       	        android:id="@+id/datePicker2"
       	        android:layout_marginTop="10pt"
       	        android:textColor="@color/white"
       	        android:background="@drawable/button_customize6"
       	        android:layout_width="wrap_content"
       	        android:layout_height="wrap_content" />
       	    
       	    <RadioGroup
	            android:id="@+id/radioGroup3"
	            android:layout_width="match_parent"
	            android:layout_marginTop="10pt"
	            android:gravity="center"
	            android:layout_height="wrap_content" >

	        <RadioButton
	            android:id="@+id/ChartEachDayOption"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button_customize3"
	            android:text="Each Day"
		        android:padding="5pt"
 				android:textColor="@color/white"
 				android:textSize="15pt" />

	        <RadioButton
	            android:id="@+id/ChartEachMonthOption"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Each Month"
	            android:background="@drawable/button_customize3"
		        android:padding="5pt"
 				android:textColor="@color/white"
 				android:textSize="15pt" />
	    </RadioGroup>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_marginTop="10pt"
	        android:orientation="vertical" >

	        
	        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="1pt"
	        android:background="@color/blue_light"
	        android:orientation="vertical" />
	
	    </LinearLayout>
	    
   	    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Better Charts:"
        android:textSize="18pt"
        android:textColor="@color/white"
       	android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceLarge" />
	    
       
       	    <RadioGroup
	            android:id="@+id/radioGroup2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >

	        <RadioButton
	            android:id="@+id/ChartYesOption"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button_customize3"
	            android:text="Yes"
		        android:padding="5pt"
 				android:textColor="@color/white"
 				android:textSize="15pt" />

	        <RadioButton
	            android:id="@+id/ChartNoOption"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="No"
	            android:background="@drawable/button_customize3"
		        android:padding="5pt"
 				android:textColor="@color/white"
 				android:textSize="15pt" />
	    </RadioGroup>
	    
   	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="1pt"
	        android:layout_marginTop="10pt"
	        android:background="@color/blue_light"
	        android:orientation="vertical" />
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:orientation="vertical" >
	
	        <Button
	            android:id="@+id/OptionsSave"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Save"
	            android:background="@drawable/button_customize3"
		        android:padding="10pt"
		        android:layout_marginTop="10pt"
		        android:layout_marginBottom="10pt"
 				android:textColor="@color/white"
 				android:textSize="15pt" />
	        
	        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="1pt"
	        android:background="@color/blue_light"
	        android:orientation="vertical" />
	
	    </LinearLayout>
	    
	        
	
	    </LinearLayout>

	</RelativeLayout>
</ScrollView>